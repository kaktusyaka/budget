= form_for @transaction, html: { class: 'form-horizontal', id: 'transaction_form' } do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2
        = pluralize(@transaction.errors.count, "error")
        prohibited this transaction from being saved:
      %ul
        - @transaction.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :category_name, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.text_field :category_name, value: (f.object.category.name if f.object.category_id), class: 'form-control'
  .form-group
    = f.label :income, "Type", class: 'col-sm-2 control-label'
    .col-sm-3
      =f.radio_button :income, false
      = label :expenditure, 'Expenditure'
      %br
      = f.radio_button :income, true
      = label :income, 'Income'
  .form-group
    = f.label :date, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.text_field :date, value: (f.object.date ? f.object.date : Date.today).strftime('%d/%m/%Y'),
                            placeholder: "dd/mm/yyyy",
                            'data-behaviour' => 'datepicker',
                            class: 'form-control datepicker'
  .form-group
    = f.label :amount, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.number_field :amount, min: 0.01, step: 0.01, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_area :description, class: 'form-control wysihtml5'
  .form-group
    .col-sm-offset-2.col-sm-3
      = f.submit "Submit", class: 'btn btn-default'
