.slider
  #about-slider
    #carousel-slider.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators.visible-xs
        %li.active{"data-slide-to" => "0", "data-target" => "#carousel-slider"}
        %li{"data-slide-to" => "1", "data-target" => "#carousel-slider"}
        %li{"data-slide-to" => "2", "data-target" => "#carousel-slider"}
      .carousel-inner
        .item.active
          = image_tag "dash_slider/1.jpg", class: "img-responsive"
          .carousel-caption
            .wow.fadeInUp{"data-wow-delay" => "0.3s", "data-wow-offset" => "0"}
              %h2
                %span Family Budget Online
            .wow.fadeInUp{"data-wow-delay" => "0.6s", "data-wow-offset" => "0"}
              %p A simple way to make your budget manageable
            = render "slider_buttons"
        .item
          = image_tag "dash_slider/2.jpg", class: "img-responsive"
          .carousel-caption
            .wow.fadeInUp{"data-wow-delay" => "1.0s", "data-wow-offset" => "0"}
              %h2 Simple & Intuitive Interface
            .wow.fadeInUp{"data-wow-delay" => "1.3s", "data-wow-offset" => "0"}
              %p It requires no training, not overloaded with unnecessary information
            = render "slider_buttons"
        .item
          = image_tag "dash_slider/3.jpg", class: "img-responsive"
          .carousel-caption
            .wow.fadeInUp{"data-wow-delay" => "0.3s", "data-wow-offset" => "0"}
              %h2 Is Free!
            .wow.fadeInUp{"data-wow-delay" => "0.6s", "data-wow-offset" => "0"}
              %p Registration and basic functions are free of charge
            = render "slider_buttons"
      = link_to  "#carousel-slider", class: "left carousel-control hidden-xs", "data-slide" => "prev" do
        %i.fa.fa-angle-left
      = link_to  "#carousel-slider", class: "right carousel-control hidden-xs", "data-slide" => "next" do
        %i.fa.fa-angle-right
    / /#carousel-slider
  / /#about-slider
/ /#slider
