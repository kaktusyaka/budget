#pricing
  .container
    .text-center
      %h3 Pricing Table
      %p
        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut
        Whether you're new to managing your waist or looking for a platform
        %br
          for your business, SaveBudget has the right plan for you
    .pricing-area.text-center
      .row
        - PricingPlan.all.each do |pricing_plan|
          .col-sm-6.col-md-3.plan.price-four.wow.fadeInLeft
            %ul
              %li.heading-four
                %h2=pricing_plan.name
                %span= number_to_currency pricing_plan.price
              %li
                - if pricing_plan.try(:premium?)
                  Unlimate
                - else
                  #{pricing_plan.quantity_of_categories} categories
              %li
                - if pricing_plan.try(:premium?)
                  Unlimate
                - else
                  #{pricing_plan.quantity_of_transactions} transactions
              %li 24/7 Support
              %li.plan-action
                - if current_user
                  - unless pricing_plan.name.eql?(current_user.pricing_plan.name)
                    - if pricing_plan.price < current_user.pricing_plan.price
                      = link_to "Downgrade", downgrade_pricing_plan_path(pricing_plan), class: 'btn btn-primary'
                    - else
                      = link_to "Buy now", checkout_pricing_plan_path(pricing_plan), class: 'btn btn-primary'

                - else
                  = link_to "Sign up", new_user_registration_path, class: "btn btn-primary"
    / /pricing-area
/ /#pricing
